<Page x:Class="Menu.Pages.Minepage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Menu.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Minepage">
    <Page.Background>
        <ImageBrush ImageSource="../Images/WorkPlaceImage.jpg "
                Stretch="Fill"
                />
    </Page.Background>
    <Grid>
        <Button Content="광산" Foreground="White" HorizontalAlignment="Left" Margin="68,0,0,0" VerticalAlignment="Center" Height="232" Width="241" FontSize="24" Click="GoToMine">
            <Button.Background>
                <ImageBrush ImageSource="/Images/gotoMine.jpg" Stretch="Fill"></ImageBrush>
            </Button.Background>
        </Button>
        <Button Content="숲" Foreground="White" HorizontalAlignment="Left" Margin="486,0,0,0" VerticalAlignment="Center" Height="231" Width="241" FontSize="24" Click="GoToForest">
            <Button.Background>
                <ImageBrush ImageSource="/Images/gotoForest.png" Stretch="Fill"></ImageBrush>
            </Button.Background>
        </Button>

        <Button Content="뒤로가기" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Height="32" Width="74" Click="Button_Click_1"/>
    </Grid>
</Page>
