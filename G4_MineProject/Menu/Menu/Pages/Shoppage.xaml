<Page x:Class="Menu.Pages.Shoppage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Menu.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Shoppage">
    <StackPanel Orientation="Vertical">
        <TextBox FontSize="20" x:Name="title" TextWrapping="Wrap" Text="여기는 상점" Width="795" Height="42"/>
        <DataGrid x:Name="equipmentList"
              AutoGenerateColumns="False"
              Width="700"
              Background="Transparent"
              ScrollViewer.VerticalScrollBarVisibility="Auto"
              ScrollViewer.HorizontalScrollBarVisibility="Auto" Height="123">
            <DataGrid.Columns>
                <DataGridTextColumn Header="name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="price" Binding="{Binding Price}" />
                <DataGridTextColumn Header="amount" Binding="{Binding Amount}" />
                <DataGridTemplateColumn Header="Image" Width="100" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Imgsource}" Width="60" Height="60"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="foodList"
              AutoGenerateColumns="False"
              Width="700"
              Background="Transparent"
              ScrollViewer.VerticalScrollBarVisibility="Auto"
              ScrollViewer.HorizontalScrollBarVisibility="Auto" Height="148">
            <DataGrid.Columns>
                <DataGridTextColumn Header="name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="price" Binding="{Binding Price}" />
                <DataGridTextColumn Header="amount" Binding="{Binding Amount}" />
                <DataGridTemplateColumn Header="Image" Width="100" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Imgsource}" Width="60" Height="60"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock x:Name="money" HorizontalAlignment= "Center" Text="여기는 상점"/>

        <Button x:Name="buy" Content="사기" HorizontalAlignment="Center" Height="36" Click="Buy_Click"/>
        <Button x:Name="sell" Content="팔기" HorizontalAlignment="Center" Height="36" Click="sell_Click"/>
        <Button FontSize="20" Content="메뉴로" Height="30" Click="Button_Click"/>
    </StackPanel>
</Page>
